{% extends 'backoffice.html.twig'  %}
{% block body %}

<div class="container">
    <div class="row mt-5">
        <div class="col">
            <h1 class="mb-4">Gestion des Utilisateurs</h1>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Rôle</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <th scope="row">{{ user.id }}</th>
                            <td>{{ user.nickname }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.roles[0] }}</td>
                            <td>
                                <a href="{{ path('update_role_user', {'id': user.id, 'role': 'ROLE_ADMIN'}) }}" class="btn btn-sm btn-primary">Passer à Admin</a>
                                <a href="{{ path('update_role_user', {'id': user.id, 'role': 'ROLE_USER'}) }}" class="btn btn-sm btn-secondary">Passer à Utilisateur</a>
                                {% if user.active %}
                                    <a href="{{ path('admin_user_desactivate', {'id': user.id, 'active': 0}) }}" class="btn btn-sm btn-danger">Désactiver</a>
                                {% else %}
                                    <a href="{{ path('admin_user_desactivate', {'id': user.id, 'active': 1}) }}" class="btn btn-sm btn-success">Activer</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}

