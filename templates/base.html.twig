<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Bienvenue dans l'univers de Parfumé Perfumes{% endblock %}</title>
    {% block stylesheets %}
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css"
          integrity="sha512-b2QcS5SsA8tZodcDtGRELiGv5SaKSk1vDHDaQRda0htPYWZ6046lr3kJ5bAAQdpV2mmA/4v0wQF9MyU6/pDIAg=="
          crossorigin="anonymous" referrerpolicy="no-referrer">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{asset('styles/app.css')}}">
    {# font google #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet">
    {% endblock %}
    {% block javascripts %}
    <script defer src="https://kit.fontawesome.com/da3ac613e4.js" crossorigin="anonymous"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"></script>

    {% block importmap %}
        {{ importmap('app') }}
    {% endblock %}
    {% endblock %}
</head>
<body>
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <!-- Brand -->
        <a class="navbar-brand" href="#">Perfumes</a>
		  {# <a class="navbar-brand" href="#">
            <img src="public/upload/Perfumes.png" alt="Logo" width="auto" height="30">
        </a> #}

        <!-- Toggler -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="{{path('app_catalogue')}}">Catalogue</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Quiz</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path('blog')}}">Blog</a>
                </li>
                    <a class="nav-link " href="#">
                        À propos
                    </a>
                </li>
				<li class="nav-item ">
					<a class="nav-link" href="#">Contact</a>
				</li>
                    
            </ul>

            <!-- User actions -->
            <ul class="navbar-nav">
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link btn btn-bronze" href="{{ path('cart')}}">Panier
                            <i class="fa-solid fa-cart-shopping"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout')}}">Déconnexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_user_profil')}}">Profil</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link btn btn-turquois" href="{{ path('app_admin')}}">Backoffice</a>
                        </li>
                    {% endif %}
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login')}}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('sign_up')}}">Inscription</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

{# messages add flash #}
<div class="container-fluid" style="padding-left: 0; padding-right: 0;">
    <div class="w-50 mx-auto"><!-- Affichage des messages flash -->
        <!-- Messages flash ici -->
    </div>

    <!-- Body content -->
    {% block body %}{% endblock %}
</div> {% block footer %}
<footer class="footer fixed-bottom mt-auto py-3 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <span class="text-muted">© 2024 Bienvenu dans l'univers de parfumé Perfumes. Tous droits réservés.</span>
      </div>
    </div>
    <div class="row">
      <div class="col text-muted text-center">
        <small>Mentions légales | Politique de confidentialité | Conditions générales d'utilisation</small>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 text-center">
        <a href="#" class="me-3 color-turquois"><i class="fab fa-facebook"></i></a>
        <a href="#" class="me-3 color-bronze"><i class="fab fa-twitter"></i></a>
        <a href="#" class="me-3 color-turquois"><i class="fab fa-instagram"></i></a>
        <a href="#" class="me-3 color-bronze"><i class="fab fa-linkedin"></i></a>
      </div>
    </div>
  </div>
</footer>

{% endblock %}

</body>
</html>
