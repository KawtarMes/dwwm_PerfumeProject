{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <h1 class="text-center mb-4">Liste des articles</h1>

    <div class="row">
        {% for article in articles %}
            <div class="col-md-12 mb-4">
                <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                    <div class="col-md-3 d-flex align-items-center">
                        {% if article.medias is not empty %}
                            <img src="{{ asset('upload/' ~ article.medias[0].src) }}" class="img-fluid" alt="Image de couverture de l'article : {{ article.ArticleTitle }}">
                        {% endif %}
                    </div>
                    <div class="col-md-9">
                        <div class="p-4 d-flex flex-column h-100">
                            <h5 class="mb-3">{{ article.ArticleTitle }}</h5>
                            
                            <div class="d-flex justify-content-between align-items-end">
                                <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-turquois">Lire la suite</a>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
