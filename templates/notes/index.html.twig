{% extends 'backoffice.html.twig' %}

{% block body %}
<div class="container-fluid p-5">
    <h1 class="mb-4">Gestion des Notes </h1>
    <a href="{{ path('admin_notes_new')}}" class="btn btn-turquois w-25 mr-3">Ajouter une note</a>
    <div class="table-responsive">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Note</th>
                    <th scope="col">Image</th>
                    <th scope="col" class="col-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if notes | length > 0 %}
                {% for note in notes %}
                <tr>
                    <th scope="row">{{note.id}}</th>
                    <td>{{note.noteName}}</td>
                    <td>
                        {% if note.media is not null %}
                        <img src="{{ asset('upload/' ~ note.media.src) }}" class="img-thumbnail mt-1" width="100" alt="image raffigurante la note olfactive :"{{note.noteName}}">
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ url("admin_notes_update", {'id' : note.id}) }}" class="btn btn-turquois">Modifier</a>
                        <a href="{{ url('admin_notes_delete', {'id' : note.id}) }}" class="btn btn-bronze">Supprimer</a>
                        <a href="{{ url('note_detail' , {'id' : note.id })}}" class="btn btn-cream">DÃ©tail</a>
                    </td>
                </tr>
                {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
