{% extends 'backoffice.html.twig' %}

{% block titre %}
  {{ title }}
{% endblock %}

{% block body %}

  <div class="container-fluid p-5">
    <div class="row mb-3">
      <div class="col-md-12">
        <h2>Gestion des médias du parfum "{{ perfume.perfumeTitle }}"</h2>
        <a href="{{ path('media_create', {'id': perfume.id}) }}" class="btn btn-turquois btn-lg">Ajouter des médias</a>
      </div>
    </div>

    <form method="post" class="mt-3" action="{{ path('perfume_delete_medias', {'id': perfume.id}) }}">
      <div class="row">
        {% for media in perfume.mediasId %}
        <div class="col-md-3 mb-3">
          <div class="card">
            <img src="{{ asset('upload/') }}{{ media.src }}" class="card-img-top img-fluid" alt="{{ media.id }}">
            <div class="card-body">
              <div class="form-check">
                <input class="form-check-input" name="choice[]" multiple type="checkbox" value="{{ media.id }}" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                  {{ media.id }}
                </label>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      <button type="submit" class="btn btn-bronze btn-block">Supprimer les médias sélectionnés</button>
    </form>
  </div>

{% endblock %}
